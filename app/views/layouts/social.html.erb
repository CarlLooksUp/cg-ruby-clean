<!DOCTYPE html>
<html>
<%= render 'layouts/doc_head' %>
<script src="//load.sumome.com/" data-sumo-site-id="aff4aadc5973601bfaa2fb75fe52293360f323c467fc02a26584489f30023ab3" async></script>
<body>
  <div id="splash_header" style="background-image: url(<%= yield(:header_image) %>)">
    <%= render 'layouts/header' %>
    <div id="splash_spacer"></div>
    <div id="wrapper">
      <div class="container">
        <div class="alert-content">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
          <% end %>
        </div>
      </div>
      <%= yield %>
      <%= render 'layouts/footer' %>
      <div class="container">
        <%= debug(params) if Rails.env.development? %>
      </div>
    </div>
  </div>
</body>
</html>
