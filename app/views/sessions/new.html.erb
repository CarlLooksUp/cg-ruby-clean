<% provide(:title, 'Sign In') %>

<div class="row split-form">
  <div class="col-md-6">
    <h1 class="text-center">Sign Up</h1>
    <%= render "users/new_user", submit_button: true %>
  </div>
  <span class="vertical-rule" style="padding-top: 50px;"><%= image_tag 'vrule-homepage.png' %></span>
  <div class="col-md-4 col-md-offset-1">
    <h1 class="text-center">Sign In</h1>
    <%= form_for(:session, url: sessions_path, html: {class: 'form-horizontal login-form' }) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :email, class: 'string required form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'col-md-3 control-label'%>
      <div class="col-md-9">
        <%= f.password_field :password, class: 'string required form-control' %>
      </div>
    </div>
      <%= f.submit "Sign in", class: "btn btn-large btn-block btn-primary col-md-8 col-md-offset-1" %>
    <% end %>
    <p>Having trouble? Try <%= link_to "resetting your password", new_password_reset_path %>.</p>
  </div>
</div>
