<% provide(:title, "Business Names") %>
<% provide(:description, "Browse or search for business names that are already in use and protected by trademark law") %>
  <div class="search_page">
      <div class="col-md-12" id="search-container">
        <div id="search-title"><h1>Search our database of over <br><em>1,000,000</em> Businesses and Trademarks</h1></div>
        <div id="search_bar">
          <%= form_tag search_path, :method => 'get' do %>
            <%= hidden_field_tag :direction, params[:direction] %>
            <%= hidden_field_tag :sort, params[:sort] %>
            <%= text_field_tag :search, params[:search], placeholder: 'Search a Trademark Here...' %>
            <%= submit_tag "Search", name: nil, class: 'btn btn-primary', id: "submit_search" %>
          <% end %>
        </div>
          <div class="col-md-12">
            <div id="search-filter">
              <%= form_tag search_path, method: 'get', remote: true do %>
                <table id="search_options">
                  <tbody>
                    <tr>
                      <td id="filter_by"><span>Filter by:</span></td>
                      <td id="state-filter"><%= collection_select :state,:id, @states, :id, :state, {prompt: "Select State"}, {id: "state_filter", name: "state_id", data: {toggle: 'tooltip', placement: 'bottom'}, title: 'test'} %></td>
                      <td id="source-filter"><%= collection_select :source,:id, @sources, :id, :source, {prompt: "Select Source"}, {id: "source_filter", name: "source_id"}  %></td>
                    </tr>
                  </tbody>
                </table> 
            <% end %>
            </div>
        </div>
      </div>
    <div class="col-md-12">
    </div>
      <div class="col-md-12">
        <div id="bus_container">
          <div id="result-count"></div>
          <div id="bus_table"></div>
        </div>
      </div>   
    <div id="bus_page" class="col-md-12">
      <%= will_paginate @businesses, inner_window: 2, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
